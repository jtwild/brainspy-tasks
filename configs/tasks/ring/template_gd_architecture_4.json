{
    "results_base_dir": "tmp/output/ring/",
    "overwrite_results": false,
    "steps": 1,
    "show_plots": true,
    "save_plots": true,
    "runs":1000,
    "ring_data":{
        "generate_data":true,
        "sample_no":40000
    },
    "algorithm_configs": {
        "experiment_name":"noise",
        "algorithm": "gradient_descent",
        "hyperparameters": {
            "nr_epochs": 800,
            "batch_size": 4000,
            "learning_rate": 0.0065,
            "save_interval": 100,
            "optimizer":"yogi",
            "loss_function": "fisher",
            "betas":[0.99,0.999],
            "stop_threshold": -99999999
        },
        "processor": { 
            "platform": "simulation",
            "processor_type": "dnpu",
            "architecture": "single_device",
            "architecture_type": "221", 
            "torch_model_dict": "tmp/input/models/default_model.pt",
            "debug":true,
            "noise": 1.432,
            "input_indices": [1,2],
            "input_electrode_no": 7,
            "waveform": {
                "amplitude_lengths": 1,
                "slope_lengths": 0,
                "output_clipping_value": 4.0
            },
            "batch_norm": {
                "use_running_stats" : true
            }
        },
        "checkpoints": {
            "use_checkpoints": false,
            "save_interval": 5
        }
    },
    "validation": {
        "processor": {
            "architecture": "device_architecture",
            "architecture_type": "221",
            "use_noise":false,
            "debug":true,
            "batch_norm": {
                "use_running_stats" : false
            },
            "platform": "simulation",
            "processor_type": "surrogate",
            "torch_model_dict": "tmp/input/models/default_model.pt",
            "input_indices": [1,2],
            "input_electrode_no": 7,
            "waveform": {
                "amplitude_lengths": 80,
                "slope_lengths": 20,
                "output_clipping_value": 4.0
            }
        }
    }
}