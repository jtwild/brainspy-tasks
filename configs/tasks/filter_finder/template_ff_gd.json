{
"filter_finder":{
        "max_attempts":1,
        "main_results_dir": "tmp/output/filter_finder/",
        "results_base_dir": "tmp/output/filter_finder/testruns",
        "save_plot": true,
        "show_plots": true,
        "algorithm_configs": {
            "algorithm": "gradient_descent",
            "results_base_dir": "tmp/output/filter_finder/gd/useless_test",
            "hyperparameters": {
                        "nr_epochs": 10,
                        "batch_size": 100,
                        "learning_rate": 0.0001,
                        "loss_function": "sigmoid_distance",
                        "optimizer": "adam",
                        "betas": [0.99, 0.999],
                        "stop_threshold": -1000,                                         "__comment":"If the loss reaches this value, the training stops."
            },
            "processor": {
                        "architecture":"single_device",
                        "platform": "simulation",
                        "simulation_type": "neural_network",
                        "network_type": "dnpu",
                        "torch_model_dict": "tmp/input/models/model_2020.pt",
                        "use_noise": true,
                        "input_indices": [1,2,3,4],
                        "input_electrode_no": 7,                                        "__comment":"The total amount of input electrodes. Required for the processor to determine the control electrodes.",
                        "waveform":{                                                    "__comment":"A waveform can be generated, used for measuring real devices which require some time to settle.",
                            "amplitude_lengths": 1,                                     "__comment":"In simulation, you can set this to 1 to just feed one datapoint.",
                            "slope_lengths": 0,                                         "__comment":"In simulation, you can set this to 0 to just feed one datapoint.",
                            "output_clipping_value": 3.55
                        }
            },
            "checkpoints": {
                "use_checkpoints": false,
                "save_dir": "algorithm_checkpoints",
                "save_interval": 100,
                "live_plot": false,
                "live_plot_interval": 5
            }
        },
    "boolean_gate_test":{
    "validation":{
        "processor": {
                    "waveform":{
                                "amplitude_lengths": 1,
                                "slope_lengths": 0,
                                "output_clipping_value": 3.55
                            }
                    }
                },
    "algorithm_configs": {
                "algorithm": "gradient_descent",
                "processor": {
                            "auto_generate_inputs": true,
                            "platform": "simulation",
                            "input_indices": [1,2,3,4],
                            "input_electrode_no": 7,
                            "num_elec": 8,
                            "waveform":{
                                "use_waveform": true,
                                "amplitude_lengths": 1,
                                "slope_lengths": 0,
                                "output_clipping_value": 3.55
                            }
                }

        }
    }
    }
}
